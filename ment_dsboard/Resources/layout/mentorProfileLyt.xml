<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9FBFF">

        <TextView
            android:id="@+id/mentorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="20dp"
            android:text="My Profile"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#257CFF"
    />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/mentorTextView"
            app:layout_constraintStart_toStartOf="@+id/mentorTextView"
            app:layout_constraintTop_toTopOf="@+id/mentorTextView"
            android:id="@+id/mentorCardView"
            app:cardCornerRadius="60dp"
            app:cardElevation="10dp"
            android:layout_marginTop="60dp">


           <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
       
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/mentors"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@drawable/shape"
            app:cardCornerRadius="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mentorCardView"
            android:layout_marginTop="60dp"
            android:id="@+id/mentorView"
            android:minWidth="25px"
            android:minHeight="25px"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/constraintLayout2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sam Smith Paul"
                    android:id="@+id/mentorNameTextview"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.229"
    />

                <TextView
                    android:id="@+id/mentorBusinessText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Analyst"
                    android:layout_marginTop="35dp"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="@+id/mentorNameTextview"
                    app:layout_constraintStart_toStartOf="@+id/mentorNameTextview"
                    app:layout_constraintTop_toTopOf="@+id/mentorNameTextview"
                    app:layout_constraintVertical_bias="0.098"
    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/call"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorBusinessText"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="80dp"
                    android:id="@+id/mentorcallImageView"
    />

                <TextView
                    android:id="@+id/mentorNumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 1234567890"
                    android:textSize="12dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/mentorcallImageView"
                    app:layout_constraintTop_toTopOf="@+id/mentorBusinessText"
                    app:layout_constraintHorizontal_bias="0.100"
                    android:layout_marginLeft="15dp"
    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baglogo"
                    android:background="@drawable/outlinebk"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorNumTextView"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mentorDetailsImageView"
    />

                <TextView
                    android:id="@+id/mentorDetailsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internship details"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorDetailsImageView"
                    app:layout_constraintHorizontal_bias="0.100"
                    android:layout_marginLeft="80dp"
    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_next"
                    android:background="@drawable/outlinebk"
                    app:layout_constraintTop_toTopOf="@+id/mentorDetailsImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/mentorNextDetailsImageView"
     />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email_outline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorNextDetailsImageView"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mentorEmailImageView"
    />

                <TextView
                    android:id="@+id/mentorEmailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sampaul@1rivet.com"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorEmailImageView"
                    app:layout_constraintHorizontal_bias="0.100"
                    android:layout_marginLeft="80dp"
    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"
                    android:background="@drawable/outlinebk"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorEmailImageView"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mentorUserImageView"
    />

                <TextView
                    android:id="@+id/mentorUserTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sampaul@12345"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorUserImageView"
                    app:layout_constraintHorizontal_bias="0.100"
                    android:layout_marginLeft="80dp"
    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/change_password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorUserTextView"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mentorChangePassImageView"
    />

                <TextView
                    android:id="@+id/mentorChangePassTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change password"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorChangePassImageView"
                    app:layout_constraintHorizontal_bias="0.100"
                    android:layout_marginLeft="80dp"
    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_next"
                    app:layout_constraintTop_toTopOf="@+id/mentorChangePassImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/mentornextChangePassImageView"
    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/log_out"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorChangePassImageView"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mentorLogoutImageView"
    />

                <TextView
                    android:id="@+id/mentorLogoutTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mentorLogoutImageView"
                    app:layout_constraintHorizontal_bias="0.100"
                    android:layout_marginLeft="80dp"
    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
 

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>